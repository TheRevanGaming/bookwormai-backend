<!DOCTYPE html> <html lang="en"> <head>
 <meta charset="UTF-8" />
  <title>Book Worm AI</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      background: #050510;
      color: #f5f5ff;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }
    header {
      padding: 12px 16px;
      border-bottom: 1px solid #24243a;
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: radial-gradient(circle at top left, #272763, #050510);
    }
    header h1 {
      font-size: 18px;
      margin: 0;
    }
    header span {
      font-size: 12px;
      opacity: 0.7;
    }
    #chat {
      flex: 1;
      overflow-y: auto;
      padding: 16px;
    }
    .msg {
      margin-bottom: 12px;
      max-width: 800px;
    }
    .msg.user {
      text-align: right;
    }
    .msg.assistant {
      text-align: left;
    }
    .bubble {
      display: inline-block;
      padding: 8px 12px;
      border-radius: 12px;
      font-size: 14px;
      line-height: 1.4;
    }
    .user .bubble {
      background: #3b82f6;
      color: #fff;
      border-bottom-right-radius: 2px;
    }
    .assistant .bubble {
      background: #111827;
      border: 1px solid #1f2933;
      border-bottom-left-radius: 2px;
    }
    #input-area {
      padding: 10px;
      border-top: 1px solid #24243a;
      display: flex;
      gap: 8px;
      background: #050510;
    }
    #prompt {
      flex: 1;
      resize: none;
      padding: 8px;
      border-radius: 8px;
      border: 1px solid #374151;
      background: #020617;
      color: #f9fafb;
      min-height: 60px;
      font-size: 14px;
    }
    button {
      border-radius: 8px;
      border: none;
      padding: 8px 12px;
      font-size: 14px;
      cursor: pointer;
    }
    #send-btn {
      background: #10b981;
      color: #01110a;
      font-weight: 600;
    }
    #send-btn:disabled {
      opacity: 0.5;
      cursor: wait;
    }
    #status {
      font-size: 12px;
      opacity: 0.7;
      margin-left: 4px;
    }
  </style>
</head>
<body>
  <header>
    <div>
      <h1>ðŸ“š Book Worm AI</h1>
      <span>Your private world-building & canon assistant</span>
    </div>
    <div id="status">Idle</div>
  </header>

  <div id="chat"></div>

  <div id="input-area">
    <textarea id="prompt" placeholder="Ask anything about your worlds, characters, lore, music, etc..."></textarea>
    <button id="send-btn" type="button">Send</button>
  </div>

  <audio id="audio-player"></audio>

  <script>
    const chatEl = document.getElementById("chat");
    const promptEl = document.getElementById("prompt");
    const sendBtn = document.getElementById("send-btn");
    const statusEl = document.getElementById("status");
    const audioPlayer = document.getElementById("audio-player");

    let lastAssistantReply = "";

    function appendMessage(role, text) {
      const msg = document.createElement("div");
      msg.className = "msg " + role;
      const bubble = document.createElement("div");
      bubble.className = "bubble";
      bubble.textContent = text;
      msg.appendChild(bubble);
      chatEl.appendChild(msg);
      chatEl.scrollTop = chatEl.scrollHeight;
    }

    async function speak(text) {
      if (!text) return;
      try {
        const res = await fetch("/speak", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ text })
        });

        if (!res.ok) {
          const errText = await res.text();
          console.error("TTS error:", errText);
          statusEl.textContent = "Error (voice)";
          return;
        }

        const blob = await res.blob();
        const url = URL.createObjectURL(blob);
        audioPlayer.src = url;
        await audioPlayer.play().catch(err => {
          // Most likely autoplay blocked until user interacts
          console.warn("Audio play blocked or failed:", err);
        });
      } catch (e) {
        console.error("Error calling /speak:", e);
        statusEl.textContent = "Error (voice)";
      }
    }

    async function sendPrompt() {
      const prompt = promptEl.value.trim();
      if (!prompt) return;

      appendMessage("user", prompt);
      promptEl.value = "";
      sendBtn.disabled = true;
      statusEl.textContent = "Thinking...";

      try {
        const res = await fetch("/generate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            prompt: prompt,
            mode: "auto",
            depth: "deep"
          })
        });

        const data = await res.json();
        const reply = data.response || "(No response)";
        lastAssistantReply = reply;
        appendMessage("assistant", reply);
        statusEl.textContent = "Speaking...";
        // Auto-speak her answer
        await speak(reply);
        statusEl.textContent = "Ready";
      } catch (err) {
        console.error(err);
        appendMessage("assistant", "âš  Error talking to Book Worm.");
        statusEl.textContent = "Error";
      } finally {
        sendBtn.disabled = false;
      }
    }

    // Send on button click
    sendBtn.addEventListener("click", sendPrompt);

    // Send on Enter (Shift+Enter for newline)
    promptEl.addEventListener("keydown", (e) => {
      if (e.key === "Enter" && !e.shiftKey) {
        e.preventDefault();
        sendPrompt();
      }
    });

    // Greet on load
    window.addEventListener("load", async () => {
      const greeting = "Hello, Revan. Book Worm is online and ready.";
      appendMessage("assistant", greeting);
      statusEl.textContent = "Speaking...";
      await speak(greeting);
      statusEl.textContent = "Ready";
    });

    // Try to say goodbye on close (may be blocked by browser)
    window.addEventListener("beforeunload", () => {
      // We can't reliably play audio here due to browser restrictions,
      // but we include the hook in case the browser allows it.
      try {
        speak("Goodbye for now. I will be here when you return.");
      } catch (_) {}
    });
  </script>
</body>
</html>
